<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.kcal.KcalFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutKcal"
        android:background="@color/tab_layout_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabTextColor="@color/tab_layout_text_color" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerKcal"
        android:background="@color/view_pager_color"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>